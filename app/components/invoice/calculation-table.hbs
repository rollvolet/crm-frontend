<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden border-b border-gray-200">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">

              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Netto
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {{@model.vatRate.rate}}% BTW
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Bruto
              </th>
            </tr>
          </thead>
          <tbody>
            {{#if this.loadData.isRunning}}
              <tr>
                <td colspan="3">Aan het berekenen...</td>
              </tr>
            {{else}}
              <tr>
                <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Basis
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.baseAmount}} />
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  {{#if this.baseAmount}}
                    <FmtCurrency @value={{this.baseAmountVat}} />
                  {{/if}}
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                </td>
              </tr>

              <tr>
                <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                  {{on "click" this.openSupplementsDialog}} role="button">
                  Extra's {{paper-icon "info" size=18}}
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.supplementsAmount}} />
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  {{#if this.baseAmount}}
                    <FmtCurrency @value={{this.supplementsVat}} />
                  {{/if}}
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                </td>
              </tr>

              {{#unless @model.isIsolated}}
                <tr>
                  <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Totaal {{#if this.intervention}}interventie{{else}}bestelling{{/if}}
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                    <FmtCurrency @value={{this.totalOrderAmount}} />
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                    {{#if this.baseAmount}}
                      <FmtCurrency @value={{this.totalOrderVat}} />
                    {{/if}}
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  </td>
                </tr>

                <tr>
                  <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                    {{on "click" this.goToDeposits}} role="button">
                    Voorschotfacturen {{paper-icon "launch" size=18}}
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                    &minus; <FmtCurrency @value={{this.depositInvoicesAmount}} />
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                    &minus; <FmtCurrency @value={{this.depositInvoicesVat}} />
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  </td>
                </tr>

              {{/unless}}
              <tr class="border-t">
                <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Subtotaal
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.totalNetAmount}} />
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.totalVat}} />
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.totalGrossAmount}} />
                </td>
              </tr>

              {{#unless @model.isIsolated}}
                <tr>
                  <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                      {{on "click" this.goToDeposits}} role="button">
                    Betaalde voorschotten
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  </td>
                  <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                    &minus; <FmtCurrency @value={{this.depositsAmount}} />
                  </td>
                </tr>
              {{/unless}}

              <tr class="bg-gray-100">
                <td class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Totaal te betalen
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                </td>
                <td class="px-6 py-2 text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <FmtCurrency @value={{this.totalToPay}} />
                </td>
              </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<InvoiceSupplementsDialog @show={{this.showSupplementsDialog}} @model={{@model}} />
