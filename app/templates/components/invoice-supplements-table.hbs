<table>
  <thead>
    <th>Aantal</th>
    <th>Eenheid</th>
    <th>Omschrijving</th>
    <th>Netto totaal (&euro;)</th>
    {{#unless isDisabledEdit}}
      <th><!-- Edit/Delete --></th>
    {{/unless}}
  </thead>
  <tbody>
    {{#each model as |supplement|}}
      <tr>
        <td>{{supplement.nbOfPieces}}</td>
        <td>{{supplement.unit.name}}</td>
        <td>{{{supplement.description}}}</td>
        <td>{{fmt-currency supplement.amount}}</td>
        {{#unless isDisabledEdit}}
          <td>
            <div class="layout-row">
              {{#paper-button onClick=(action onOpenEdit supplement) iconButton=true}}
                {{paper-icon "edit mode"}}
                {{#paper-tooltip}}Bewerken{{/paper-tooltip}}
              {{/paper-button}}
              {{#paper-button onClick=(action onDelete supplement) iconButton=true}}
                {{paper-icon "delete"}}
                {{#paper-tooltip}}Verwijderen{{/paper-tooltip}}
              {{/paper-button}}
            </div>
          </td>
        {{/unless}}
      </tr>
    {{else}}
      <tr><td colspan="5">Geen extra's</td></tr>
    {{/each}}
  </tbody>
</table>
