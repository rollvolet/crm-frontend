<div class="layout-row layout-align-space-between-center">
  <div class="layout-row layout-align-start-center data-table-pagination-left">
    Toon {{startItem}}-{{endItem}}
    {{#if total}} van {{total}}{{/if}}
    {{#if sizeOptions}} |
      <PowerSelect @options={{sizeOptions}} @selected={{size}} @onchange={{action (mut size)}} @searchEnabled={{false}} @verticalPosition="above" as |size|>
        {{size}}
      </PowerSelect> per pagina
    {{/if}}
  </div>
  {{#if hasMultiplePages}}
    <div class="layout-row layout-align-end-center data-table-pagination-right">
      <PaperButton @disabled={{isFirstPage}} @onClick={{action "changePage" links.first}} @iconButton={{true}}>
        {{paper-icon "first page"}}
      </PaperButton>
      <PaperButton @disabled={{isFirstPage}} @onClick={{action "changePage" links.prev}} @iconButton={{true}}>
        {{paper-icon "chevron left"}}
      </PaperButton>
      <PowerSelect @options={{pageOptions}} @selected={{currentPage}} @onchange={{action (mut currentPage)}} @searchEnabled={{false}} @verticalPosition="above" as |page|>
        {{page}}
      </PowerSelect>
      <PaperButton @disabled={{isLastPage}} @onClick={{action "changePage" links.next}} @iconButton={{true}}>
        {{paper-icon "chevron right"}}
      </PaperButton>
      <PaperButton @disabled={{isLastPage}} @onClick={{action "changePage" links.last}} @iconButton={{true}}>
        {{paper-icon "last page"}}
      </PaperButton>
    </div>
  {{/if}}
</div>