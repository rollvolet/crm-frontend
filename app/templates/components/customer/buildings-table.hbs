<div class="data-table-filters">
  <div class="data-table-filters--title">{{paper-icon "search"}}</div>
  <PaperInput @label="Nummer" @value={{number}} @onChange={{action "setFilter" "number"}} @class="small" />
  <PaperInput @label="Naam" @value={{name}} @onChange={{action "setFilter" "name"}} />
  <PaperInput @label="Straat" @value={{street}} @onChange={{action "setFilter" "street"}} @class="large" />
  <PaperInput @label="Postcode" @value={{postalCode}} @onChange={{action "setFilter" "postalCode"}} @class="small" />
  <PaperInput @label="Gemeente" @value={{city}} @onChange={{action "setFilter" "city"}} />
  <PaperInput @label="Telefoon" @value={{telephone}} @onChange={{action "setFilter" "telephone"}} />
  <PaperButton @iconButton={{true}} @onClick={{action "resetFilters"}}>
    {{paper-icon "close"}}
    <PaperTooltip>Wis filters</PaperTooltip>
  </PaperButton>
</div>

<DataTable @content={{buildings}} @isLoading={{not search.isIdle}} @noDataMessage="Geen gebouwen" @onClickRow={{onClickRow}} @page={{page}} @size={{size}} @sort={{sort}} as |t|>
  <t.content as |c|>
    <c.header>
      <ThSortable @field="number" @currentSorting={{sort}} @label="Nr" />
      <th>Aanspreking</th>
      <th>Prefix</th>
      <ThSortable @field="name" @currentSorting={{sort}} @label="Naam" />
      <ThSortable @field="address" @currentSorting={{sort}} @label="Straat" />
      <ThSortable @field="postal-code" @currentSorting={{sort}} @label="Postcode" />
      <ThSortable @field="city" @currentSorting={{sort}} @label="Gemeente" />
      <th>Land</th>
      <th>Taal</th>
      <th></th>
    </c.header>
    <c.body as |row|>
      <td>{{row.number}}</td>
      <td>{{row.honorificPrefix.name}}</td>
      <td>{{row.prefix}}</td>
      <td>{{row.name}}</td>
      <td>{{row.address}}</td>
      <td>{{row.postalCode}}</td>
      <td>{{row.city}}</td>
      <td>{{row.country.name}}</td>
      <td>{{row.language.name}}</td>
      <td {{action "edit" row}}>{{paper-icon "mode edit"}}</td>
    </c.body>
  </t.content>
</DataTable>
