{{#liquid-if displayList class="data-table-selection"}}
  <Customer::BuildingsTable @customer={{customer}} @onClickRow={{action "openDetail"}} @onEdit={{action "openEdit"}} />
  <div class="layout-row layout-align-end">
    <PaperButton @primary={{true}} @fab={{true}} @raised={{true}} @mini={{true}} @onClick={{action "openCreate"}}>
      {{paper-icon "add"}}
      <PaperTooltip>Voeg nieuw gebouw toe</PaperTooltip>
    </PaperButton>
  </div>
{{else if displayDetail}}
  <BuildingDetailPanel @model={{selectedBuilding}} @onClose={{action "closeDetail"}} @onEdit={{action "openEdit"}} />
{{else if displayEdit}}
  <CustomerEntityEditForm @scope="building" @model={{selectedBuilding}} @onClose={{action "closeEdit"}} @onRemove={{action "closeEdit"}}>
    <h3>Gebouw</h3>
  </CustomerEntityEditForm>
{{/liquid-if}}