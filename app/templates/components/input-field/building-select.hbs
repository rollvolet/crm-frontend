<div ...attributes {{did-update (perform this.loadData) @customer}}>
  <label class="power-select--label">{{this.label}}</label>
  <PowerSelect
    @placeholder={{this.placeholder}}
    @searchPlaceholder="Typ om te zoeken"
    @options={{this.options}}
    @selected={{@value}}
    @searchEnabled={{true}}
    @searchField="searchName"
    @onChange={{fn @onSelectionChange}}
    @noMatchesMessage="Geen resultaten"
    @allowClear={{true}} as |option select|
  >
    {{highlight-substr option.searchName select.lastSearchedText}}
  </PowerSelect>

  <MdErrorMessages @errors={{@errors}} />
</div>
