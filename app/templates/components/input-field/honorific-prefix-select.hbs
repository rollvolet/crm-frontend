<div ...attributes {{did-update this.updateSelection @language}}>
  <label class="power-select--label">{{this.label}}</label>
  <PowerSelect
    @placeholder={{this.placeholder}}
    @searchPlaceholder="Typ om te zoeken"
    @options={{this.options}}
    @selected={{@value}}
    @searchEnabled={{true}}
    @searchField="name"
    @onChange={{@onSelectionChange}}
    @noMatchesMessage="Geen resultaten"
    @allowClear={{true}}
    as |option select|
  >
    {{highlight-substr option.name select.lastSearchedText}}
  </PowerSelect>
</div>
