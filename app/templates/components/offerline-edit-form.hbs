<div>{{model.sequenceNumber}}</div>
{{pell-editor class="pell-editor offerline" value=model.description pellOptions=pellOptions
    onChange=(action (mut model.description)) focusOut=(perform save)}}
<div class="layout-column">
  <div class="layout-row layout-align-space-between-start">
    {{save-status-icon model=model task=save}}
    {{#paper-button onClick=(action "delete") iconButton=true}}
      {{paper-icon "delete"}}
      {{#paper-tooltip}}Lijn verwijderen{{/paper-tooltip}}
    {{/paper-button}}
  </div>
  {{paper-input label="Bedrag (â‚¬)" value=amountInput
      errors=(v-get model 'amount' 'messages')
      onChange=(action (mut amountInput)) onBlur=(queue (action "formatDecimal" "amount") (perform save))
      class="default" required="style"}}
  {{input-field/vat-rate-select value=model.vatRate
      onSelectionChange=(queue (action (mut model.vatRate)) (perform save))
      class="md-input-wrapper large" required="style"}}
</div>
