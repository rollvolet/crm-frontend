<div>{{@model.sequenceNumber}}</div>
<PellEditor @class="pell-editor offerline" @value={{@model.description}} @pellOptions={{this.pellOptions}} @onChange={{fn (mut @model.description)}} @focusOut={{perform this.save}} />
<div class="layout-column">
  <div class="layout-row layout-align-space-between-start">
    <SaveStatusIcon @model={{@model}} @task={{this.save}} />
    <PaperButton @onClick={{fn @onDelete @model}} @iconButton={{true}}>
      {{paper-icon "delete"}}
      <PaperTooltip>Lijn verwijderen</PaperTooltip>
    </PaperButton>
  </div>
  <PaperInput @label="Bedrag (â‚¬)" @value={{this.amountInput}} @errors={{v-get @model "amount" "messages"}} @onChange={{fn (mut this.amountInput)}} @onBlur={{queue (fn this.formatDecimal "amount") (perform this.save)}} @class="default" @required="style" />
  <InputField::VatRateSelect @value={{@model.vatRate}} @onSelectionChange={{queue (fn (mut @model.vatRate)) (perform this.save)}} @class="md-input-wrapper large" @required="style" />
</div>
