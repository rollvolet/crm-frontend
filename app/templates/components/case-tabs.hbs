<div class="layout-row case--tabs">
  <div class="case--tabs--number">AD {{model.request.id}} {{visitor.initials}}</div>
  <div class="flex"></div>
</div>

{{#paper-tabs selected=currentRouteName borderBottom=true as |tabs|}}
  {{#if model.requestId}}
    {{#tabs.tab value="main.case.request.edit.index"
         href=(href-to "main.case.request.edit.index" model.customerId model.requestId)}}
      Aanvraag
    {{/tabs.tab}}
  {{/if}}
  {{#if model.offerId}}
    {{#tabs.tab value="main.case.offer.edit.index"
         href=(href-to "main.case.offer.edit.index" model.customerId model.offerId)}}
      Offerte
    {{/tabs.tab}}
  {{/if}}
  {{#if model.orderId}}
    {{#tabs.tab value="main.case.order.edit.index"
         href=(href-to "main.case.order.edit.index" model.customerId model.orderId)}}
      Bestelling
    {{/tabs.tab}}
    {{#tabs.tab value="main.case.order.edit.deposit-invoices"
         href=(href-to "main.case.order.edit.deposit-invoices" model.customerId model.orderId)}}
      Voorschotten
    {{/tabs.tab}}
  {{/if}}
  {{#if model.invoiceId}}
    {{#tabs.tab value="main.case.invoice.edit.index"
         href=(href-to "main.case.invoice.edit.index" model.customerId model.invoiceId)}}
      Factuur
    {{/tabs.tab}}
  {{/if}}
  {{#if canCreateNewOffer}}
    {{#tabs.tab value="main.case.request.edit.offer" onClick=(action "openNewOffer")}}
      {{paper-icon "add box"}} {{#paper-tooltip}}Maak offerte{{/paper-tooltip}}
    {{/tabs.tab}}
  {{/if}}
  {{#if canCreateNewOrder}}
    {{#tabs.tab value="main.case.offer.edit.order" onClick=(action "openNewOrder")}}
      {{paper-icon "add box"}} {{#paper-tooltip}}Maak bestelling{{/paper-tooltip}}
    {{/tabs.tab}}
  {{/if}}
  {{#if canCreateNewInvoice}}
    {{#tabs.tab value="main.case.order.edit.invoice" onClick=(action "openNewInvoice")}}
      {{paper-icon "add box"}} {{#paper-tooltip}}Maak factuur{{/paper-tooltip}}
    {{/tabs.tab}}
  {{/if}}
{{/paper-tabs}}
