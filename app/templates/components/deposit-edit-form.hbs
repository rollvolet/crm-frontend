<div class="layout-row">
  {{paper-input label="Datum" value=model.paymentDateStr type="date"
      required="style" errors=(v-get model 'paymentDate' 'messages')
      onChange=(action (mut model.paymentDateStr))
      class="default"}}
  {{paper-input label="Bedrag" value=amountInput
      errors=(v-get model 'amount' 'messages')
      onChange=(action (mut amountInput)) onBlur=(action "formatDecimal" "amount")
      class="small"}}
  {{payment-select value=model.payment
      onSelectionChange=(action (mut model.payment))
      class="md-input-wrapper"}}
  {{#paper-button primary=true disabled=(not model.validations.isValid) onClick=(perform save model)}}
    Opslaan
  {{/paper-button}}
</div>
{{yield}}