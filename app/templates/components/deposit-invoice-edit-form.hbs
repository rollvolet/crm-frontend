<div class="layout-row layout-align-start-start">
  <section class="layout-column">
    <div class="layout-row">
      <PaperInput @label="Datum" @value={{model.invoiceDateStr}} @type="date" @required="style" @errors={{v-get model "invoiceDate" "messages"}} @onChange={{queue (action (mut model.invoiceDateStr)) (perform save)}} @class="default" />
