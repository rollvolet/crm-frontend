{{#if task.isRunning}}
  {{paper-icon "sync" class="running"}}
  {{#paper-tooltip}}Aan het opslaan{{/paper-tooltip}}
{{else}}
  {{#if model.validations.isInvalid}}
    {{paper-icon "error outline" class="error"}}
    {{#paper-tooltip}}Ongeldig{{/paper-tooltip}}
  {{else if (or model.isError task.last.isError)}}
      {{paper-icon "error outline" class="error"}}
      {{#paper-tooltip}}Fout bij opslaan{{/paper-tooltip}}
  {{else}}
    {{paper-icon "check circle outline" class="success"}}
    {{#paper-tooltip}}Opgeslagen{{/paper-tooltip}}
  {{/if}}
{{/if}}