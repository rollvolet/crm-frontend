<td onclick={{perform remove}}>
  {{paper-icon "delete"}}
</td>
<td>
  <InputField::TelephoneTypeSelect @value={{model.telephoneType}} @onSelectionChange={{queue (action (mut model.telephoneType)) (perform save)}} @errors={{v-get model "telephoneType" "messages"}} @class="md-input-wrapper small" />
</td>
<td>
  <InputField::TelephonePrefixSelect @value={{model.country}} @onSelectionChange={{queue (action (mut model.country)) (perform save)}} @errors={{v-get model "country" "messages"}} @class="md-input-wrapper small" />
</td>
<td>
  <PaperInput @value={{model.area}} @onChange={{action "setArea"}} @onBlur={{perform save}} @errors={{v-get model "area" "messages"}} @required="style" @class="xsmall" />
</td>
<td>
  <PaperInput @value={{formattedNumber}} @onChange={{action "setNumber"}} @onBlur={{perform save}} @errors={{union (v-get model "number" "messages") errorMessages}} @required="style" @class="small" />
</td>
<td>
  <PaperInput @value={{model.memo}} @onChange={{action (mut model.memo)}} @onBlur={{perform save}} @class="large" />
</td>
<td>
  <SaveStatusIcon @model={{model}} @task={{save}} />
</td>
