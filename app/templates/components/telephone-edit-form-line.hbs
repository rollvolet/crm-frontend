<td onclick={{perform this.remove}}>
  {{paper-icon "delete"}}
</td>
<td>
  <InputField::TelephoneTypeSelect @value={{this.model.telephoneType}} @onSelectionChange={{queue (action (mut this.model.telephoneType)) (perform this.save)}} @errors={{v-get this.model "telephoneType" "messages"}} @class="md-input-wrapper small" />
</td>
<td>
  <InputField::TelephonePrefixSelect @value={{this.model.country}} @onSelectionChange={{queue (action (mut this.model.country)) (perform this.save)}} @errors={{v-get this.model "country" "messages"}} @class="md-input-wrapper small" />
</td>
<td>
  <PaperInput @value={{this.model.area}} @onChange={{action "setArea"}} @onBlur={{perform this.save}} @errors={{v-get this.model "area" "messages"}} @required="style" @class="xsmall" />
</td>
<td>
  <PaperInput @value={{this.formattedNumber}} @onChange={{action "setNumber"}} @onBlur={{perform this.save}} @errors={{union (v-get this.model "number" "messages") this.errorMessages}} @required="style" @class="small" />
</td>
<td>
  <PaperInput @value={{this.model.memo}} @onChange={{action (mut this.model.memo)}} @onBlur={{perform this.save}} @class="large" />
</td>
<td>
  <SaveStatusIcon @model={{model}} @task={{this.save}} />
</td>
