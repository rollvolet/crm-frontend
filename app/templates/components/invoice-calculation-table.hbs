<table class="invoice-calculation-table">
  <thead>
    <th></th>
    <th>Netto</th>
    <th>{{model.vatRate.rate}}% BTW</th>
  </thead>
  <tbody>
    <tr>
      <td>Basis</td>
      <td>{{fmt-currency baseAmount}}</td>
      <td>{{#if baseAmount}}{{fmt-currency baseAmountVat}}{{/if}}</td>
    </tr>
    <tr {{action "openSupplementsDialog"}}>
      <td>Extra's {{paper-icon "info" size=18}}</td>
      <td>{{fmt-currency supplementsAmount}}</td>
      <td>{{fmt-currency supplementsVat}}</td>
    </tr>
    {{#unless model.isIsolated}}
      <tr class="subtotal">
        <td>Totaal bestelling</td>
        <td>{{fmt-currency totalOrderAmount}}</td>
        <td>{{fmt-currency totalOrderVat}}</td>
      </tr>
      <LinkTo @route="main.case.order.edit.deposit-invoices" @model={{model.order}} @tagName="tr" class="clickable">
        <td>Voorschotfacturen {{paper-icon "info" size=18}}</td>
        <td>&minus; {{fmt-currency depositInvoicesAmount}}</td>
        <td>&minus; {{fmt-currency depositInvoicesVat}}</td>
      </LinkTo>
    {{/unless}}
    <tr class="subtotal">
      <td>Subtotaal</td>
      <td>{{fmt-currency totalNetAmount}}</td>
      <td>{{fmt-currency totalVat}}</td>
    </tr>
  </tbody>
</table>

<table class="invoice-calculation-table">
  <thead>
    <th></th>
    <th>Bruto</th>
  </thead>
  <tbody>
    <tr class="subtotal">
      <td>Totaal</td>
      <td>{{fmt-currency totalGrossAmount}}</td>
    </tr>
    <tr>
      <td>Betaalde voorschotten</td>
      <td>&minus; {{fmt-currency depositsAmount}}</td>
    </tr>
    <tr class="total">
      <td>Totaal te betalen</td>
      <td>{{fmt-currency totalToPay}}</td>
    </tr>
  </tbody>
</table>
<div>
</div>

<InvoiceSupplementsDialog @show={{showSupplementsDialog}} @model={{model}} />
