{{#paper-autocomplete label=label options=options selected=value
     searchField="search" labelPath=(if titleize "searchTitleized" "search") onSelectionChange=(action "selectValue")
     noMatchesMessage="Geen resultaten" allowClear=true as |option select|}}
  {{#if titleize}}
    {{paper-autocomplete-highlight label=(titleize-extended (lowercase option.search)) searchText=select.searchText flags="i"}}
  {{else}}
    {{paper-autocomplete-highlight label=option.search searchText=select.searchText flags="i"}}
  {{/if}}
{{/paper-autocomplete}}