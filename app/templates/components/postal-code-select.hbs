{{#power-select placeholder=label searchPlaceholder="Typ om te zoeken" options=options selected=value
     searchField="search" onchange=(action "selectValue")
     noMatchesMessage="Geen resultaten" allowClear=true as |option select|}}
  {{#if titleize}}
    {{highlight-substr (titleize-extended (lowercase option.search)) select.lastSearchedText}}
  {{else}}
    {{highlight-substr option.search select.lastSearchedText}}
  {{/if}}
{{/power-select}}
