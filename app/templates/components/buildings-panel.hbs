{{#liquid-if displayList class="data-table-selection"}}
  {{buildings-table customer=customer onClickRow=(action "openDetail") onEdit=(action "openEdit")}}
  <div class="layout-row layout-align-end">
    {{#paper-button primary=true fab=true raised=true mini=true onClick=(action "openCreate")}}{{paper-icon "add"}}{{/paper-button}}
  </div>
{{else if displayDetail}}
  {{building-detail-panel model=selectedBuilding onClose=(action "closeDetail") onEdit=(action "openEdit")}}
{{else if displayCreate}}
  {{building-create-form customer=customer onClose=(action "closeCreate")}}
{{else if displayEdit}}
  {{building-edit-form model=selectedBuilding onClose=(action "closeEdit")}}
{{/liquid-if}}