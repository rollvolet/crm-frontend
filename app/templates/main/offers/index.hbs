<h1>Offertes</h1>

<div class="offers-data-table">

  <Offer::DataTableFilter @number={{this.number}} @reference={{this.reference}} @visitor={{this.visitor}} @requestNumber={{this.requestNumber}} @cName={{this.cName}} @cStreet={{this.cStreet}} @cPostalCode={{this.cPostalCode}} @cCity={{this.cCity}} @cTelephone={{this.cTelephone}} @bName={{this.bName}} @bPostalCode={{this.bPostalCode}} @bCity={{this.bCity}} @bStreet={{this.bStreet}} @withoutOrder={{this.withoutOrder}} @onChange={{fn this.applyFilter}} />

  <DataTable @content={{@model}} @isLoading={{this.isLoadingModel}} @noDataMessage="Geen resultaten" @sort={{this.sort}} @page={{this.page}} @size={{this.size}} @onClickRow={{fn this.clickRow}} as |t|>
    <t.content as |c|>
      <c.header>
        <th>Aanvraag</th>
        <ThSortable @field="number" @currentSorting={{this.sort}} @label="Nr" />
        <ThSortable @field="offer-date" @currentSorting={{this.sort}} @label="Datum" />
        <th>Bezoeker</th>
        <th></th>
        <th>Naam</th>
        <th>Straat</th>
        <th>Postcode</th>
        <th>Gemeente</th>
      </c.header>
      <c.body as |row|>
        <td>{{row.requestNumber}}</td>
        <td>{{row.number}}</td>
        <td><FmtDate @value={{row.offerDate}} /></td>
        <td>{{row.request.visitor}}</td>
        {{#if row.building}}
          <td>{{paper-icon "home"}}</td>
          <td>
            {{row.building.printName}}
            <span class="text-fade">(<PrintName @model={{row.customer}} />)</span>
          </td>
          <td>{{row.building.address1}}</td>
          <td>{{row.building.postalCode}}</td>
          <td>{{row.building.city}}</td>
        {{else}}
          <td>{{paper-icon "person"}}</td>
          <td><PrintName @model={{row.customer}} /></td>
          <td>{{row.customer.address1}}</td>
          <td>{{row.customer.postalCode}}</td>
          <td>{{row.customer.city}}</td>
        {{/if}}
      </c.body>
    </t.content>
  </DataTable>
</div>

<LiquidOutlet />